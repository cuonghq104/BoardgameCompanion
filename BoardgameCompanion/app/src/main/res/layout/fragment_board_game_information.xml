<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="hq.cuong.boardgamecompanion.BoardGameInformationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/back"
                android:id="@+id/iv_boardgame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name"
                android:text="name"
                android:gravity="center_horizontal"
                android:textSize="45sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_number_of_player_title"
                    android:text="Number of players : "
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_number_of_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample"
                    android:layout_toRightOf="@id/tv_number_of_player_title"
                    android:layout_alignTop="@id/tv_number_of_player_title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_below="@id/tv_number_of_player"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_suggested_player_title"
                    android:text="Suggested player : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_suggested_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample"
                    android:layout_toRightOf="@id/tv_suggested_player_title"
                    android:layout_alignTop="@id/tv_suggested_player_title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_below="@id/tv_suggested_player"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_playing_time_title"
                    android:text="Playing time : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tv_playing_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample"
                    android:layout_toRightOf="@id/tv_playing_time_title"
                    android:layout_alignTop="@id/tv_playing_time_title"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp" />


                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_categories_title"
                    android:text="Categories : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@id/tv_playing_time"/>

                <TextView
                    android:id="@+id/tv_categories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample"
                    android:layout_toRightOf="@id/tv_categories_title"
                    android:layout_alignTop="@id/tv_categories_title"
                    android:lineSpacingExtra="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_play_type_title"
                    android:text="Play type : "
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_below="@id/tv_categories"/>

                <TextView
                    android:id="@+id/tv_play_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample"
                    android:layout_toRightOf="@id/tv_play_type_title"
                    android:layout_alignTop="@id/tv_play_type_title"
                    android:lineSpacingExtra="10dp"
                    android:textSize="18dp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="20dp" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
